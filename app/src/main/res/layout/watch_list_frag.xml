<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add QBs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="ADD RBS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add wrs"
        app:layout_constraintStart_toEndOf="@+id/rush"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/remove"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:text="remove"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/compare"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/compare"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:text="compare"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/receive"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/watchListRV"
        android:layout_width="394dp"
        android:layout_height="257dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        tools:listitem="@layout/item_player" />


</androidx.constraintlayout.widget.ConstraintLayout>